{
   "action": {
      "default_icon": {
         "16": "images/logo-16.png",
         "32": "images/logo-32.png",
         "48": "images/logo-48.png",
         "128": "images/logo-128.png"
      }
   },
   "background": {
      "service_worker": "js/service-worker.js"
   },
   "commands": {
      "_execute_action": {
         "description": "Gemini Sidepanel Extended",
         "suggested_key": {
            "default": "Alt+G"
         }
      }
   },
   "content_scripts": [
      {
         "matches": [ "https://gemini.google.com/*" ],
         "js": [ "js/content-script.js" ],
         "all_frames": true,
         "run_at": "document_start"
      }
   ],
   "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; frame-src 'self' https://gemini.google.com/ https://accounts.google.com/ https://consent.google.com/; connect-src 'self' https://gemini.google.com/;"
   },
   "description": "Persistent Gemini Chats in Side Panel",
   "host_permissions": [ "https://gemini.google.com/*", "https://*.google.com/*", "*://*.googleusercontent.com/*" ],
   "icons": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
   },
   "manifest_version": 3,
   "name": "Gemini Side Panel Extended",
   "options_page": "html/options.html",
   "permissions": [ "declarativeNetRequest", "sidePanel", "storage" ],
   "side_panel": {
      "default_path": "html/sidepanel.html"
   },
   "version": "0.2.2"
}